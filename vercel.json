{
  "version": 2,
  "builds": [
    { "src": "api/convert.js", "use": "@vercel/node" },
    { "src": "/(.*)", "dest": "public/index.html" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/convert", "dest": "api/convert.js" },
    { "src": "/src/(.*)", "dest": "public/src/$1" },
    { "src": "/(.*)", "dest": "public/index.html" }
  ]
}
